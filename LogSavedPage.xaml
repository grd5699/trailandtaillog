<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrailAndTailLogBook.Pages.LogSavedPage"
             Title="Log Saved"
             BackgroundColor="White">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <!-- Success Icon -->
        <Image Source="success_icon.png" 
               HeightRequest="80"
               WidthRequest="80"
               HorizontalOptions="Center"/>

        <!-- Success Message -->
        <Label Text="Log Saved Successfully!"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <!-- OK Button -->
        <Button Text="OK"
                Clicked="OnOkClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                WidthRequest="120"
                HeightRequest="50"
                CornerRadius="25"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>